{
  "name": "cra-craco",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "antd": "^4.15.2",
    "craco-antd": "^1.19.0",
    "mobx": "^6.3.0",
    "mobx-react": "^7.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-intl": "^5.17.1",
    "react-router-dom": "^5.2.0",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@craco/craco": "^5.6.4",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.41",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "env-cmd": "^10.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "gulp": "^4.0.2",
    "gulp-jsdoc3": "^3.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.2.1",
    "react-router-config": "^5.1.1",
    "react-scripts": "3.4.0",
    "sass": "^1.32.12",
    "source-map-explorer": "^2.5.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "analyze": "env-cmd -f .env.pro.ol craco build && source-map-explorer 'build/static/js/*.js'",
    "start": "env-cmd -f .env.dev.ol craco start",
    "build": "set GENERATE_SOURCEMAP=false CI=false && craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "format": "prettier --write .",
    "lint": "eslint --ext=.tsx,.ts,.js,.jsx src --fix",
    "docs:local": "gulp docs:local",
    "docs:release": "gulp docs:release",
    "pre-commit:lint": "yarn format && yarn lint",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,css,scss,json}": [
      "prettier --write",
      "yarn lint"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "coveragePathIgnorePatterns": [
      "/src/reportWebVitals.ts",
      "/src/App.tsx",
      "/src/index.tsx",
      "/src/config/",
      "/src/assets/",
      "/src/history/",
      "/src/locales/"
    ]
  }
}
